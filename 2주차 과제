    <script>
        function q1() {
            let txt1 = $('#name').val();
            let txt2 = $('#address').val();

            let txt4 = $('#color').val();
            let txt5 = $('#num').val();
            if (txt1 == '') {
                alert('이름을 입력하세요!');
                $('#name').focus();
            } else if (txt2 == '') {
                alert('이메일을 입력하세요!')
                $('#address').focus();
              ;}
            else if(txt5 == '') {
                alert('수량을 선택하세요!');
                $('#num').focus();
            }
            else {
                alert("장바구니담기 완료");
            }
                      }


        function q2() {
            let txt1 = $('#name').val();
