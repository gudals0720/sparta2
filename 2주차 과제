                alert('이메일을 입력하세요!')
                $('#address').focus();
              ;}
            else if(txt5 == '') {
                alert('수량을 선택하세요!');
                $('#num').focus();
            }
            else {
                alert("주문완료");
            }
                      }

    </script>
